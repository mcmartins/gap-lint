{
  "rules": [
    {
      "name": "IF_STMT",
      "severity": "error",
      "message": "Missing {}",
      "when": {
        "match": "\\bif\\b"
      },
      "then": [
        {
          "match": "\\bthen\\b",
          "inline": true
        },
        {
          "match": "\\bfi;",
          "inline": false
        }
      ]
    },
    {
      "name": "IF_ELIF_STMT",
      "severity": "error",
      "message": "Missing {}",
      "when": {
        "match": "\\belif\\b"
      },
      "then": [
        {
          "match": "\\bthen\\b",
          "inline": true
        }
      ]
    },
    {
      "name": "DO_STMT",
      "severity": "error",
      "message": "Missing {}",
      "when": {
        "match": "\\bfor\\b|\\bwhile\\b|\\batomic\\b"
      },
      "then": [
        {
          "match": "\\bdo\\b",
          "inline": false
        },
        {
          "match": "\\bod;",
          "inline": false
        }
      ]
    },
    {
      "name": "REPEAT_STMT",
      "severity": "error",
      "message": "Missing {}",
      "when": {
        "match": "\\brepeat\\b"
      },
      "then": [
        {
          "match": "until",
          "inline": false
        }
      ]
    },
    {
      "name": "FUNCTION_STRCT",
      "severity": "error",
      "message": "Missing {}",
      "when": {
        "match": "\\bfunction\\b"
      },
      "then": [
        {
          "match": "\\breturn\\b",
          "inline": false
        },
        {
          "match": "\\bend;",
          "inline": false
        }
      ]
    },
    {
      "name": "TAB",
      "severity": "warning",
      "message": "Please use spaces instead of tabs",
      "when": {
        "match": "\\t"
      },
      "then": [
        {
          "match": "a^",
          "inline": true
        }
      ]
    },
    {
      "name": "BRACKETS_SQUARE",
      "severity": "warning",
      "message": "Missing close bracket ']'",
      "when": {
        "match": "\\["
      },
      "then": [
        {
          "match": "\\]",
          "inline": true
        }
      ]
    },
    {
      "name": "BRACKETS_CURVE",
      "severity": "warning",
      "message": "Missing close bracket ')'",
      "when": {
        "match": "\\((?!.*:=.*)"
      },
      "then": [
        {
          "match": "\\)",
          "inline": true
        }
      ]
    },
    {
      "name": "BRACKETS_CURLY",
      "severity": "warning",
      "message": "Missing close bracket '}'",
      "when": {
        "match": "\\{"
      },
      "then": [
        {
          "match": "\\}",
          "inline": true
        }
      ]
    },
    {
      "name": "SEMICOLON",
      "severity": "warning",
      "message": "Missing semicolon ';'",
      "when": {
        "match": "\\b.*:=.(?!function).*\\b|\\breturn\\b|\\blocal\\b"
      },
      "then": [
        {
          "match": ";",
          "inline": true
        }
      ]
    },
    {
      "name": "QUOTES",
      "severity": "warning",
      "message": "Missing end quote '\"'",
      "when": {
        "match": "\\b.*\".*\\b"
      },
      "then": [
        {
          "match": "\".*\"",
          "inline": true
        }
      ]
    }
  ]
}